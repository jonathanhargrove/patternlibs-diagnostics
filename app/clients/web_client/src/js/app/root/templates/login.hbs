<div class="login-form">
  <div class="header">
    <div class="title">{{title}}</div>
  </div>
  <form class="details">
    <div class="errors"></div>
    <div class="user-name">
      <label>Username
        <input type="text" name="username" autofocus/>
      </label>
    </div>
    <div class="password">
      <label>Password
        <input type="password" name="password"/>
      </label>
    </div>
    <button class="submit">Login</button>
  </form>
</div>

